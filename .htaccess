# ============================================================
# SEGURANÇA — Headers HTTP
# ============================================================
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
    Header always unset X-Powered-By
</IfModule>

# ============================================================
# REDIRECTS — www e HTTPS
# Use APENAS se o "Force HTTPS" do painel Hostinger estiver DESATIVADO
# ============================================================
<IfModule mod_rewrite.c>
    RewriteEngine On

    # www → sem www
    RewriteCond %{HTTP_HOST} ^www\.stmotorsara\.com\.br [NC]
    RewriteRule ^ https://stmotorsara.com.br%{REQUEST_URI} [R=301,L]

    # HTTP → HTTPS (via X-Forwarded-Proto para proxy reverso)
    RewriteCond %{HTTP:X-Forwarded-Proto} =http [NC]
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]
</IfModule>

# ============================================================
# Bloquear acesso direto à pasta includes
# ============================================================
<FilesMatch "^(security|skip-header|footer-whats)\.php$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</FilesMatch>